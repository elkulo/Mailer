{
  "name": "elkulo_mailer",
  "version": "1.0.0",
  "description": "Built locally with Webpack",
  "private": true,
  "scripts": {
    "start": "npm run develop & npm run serve",
    "develop": "webpack --mode development --watch",
    "format": "eslint --fix './public/webpack/src/**/*.+(js|jsx|json)'",
    "build": "webpack --mode production",
    "serve": "php -S localhost:8000 -t ./public",
    "serve:demo": "php -S localhost:8000 -t ./chidori",
    "composer:update": "cd chidori/mailer/app/ && composer update",
    "composer:lint": "cd chidori/mailer/app/ && composer phpcs",
    "composer:format": "cd chidori/mailer/app/ && composer phpcbf",
    "deploy:zip": "zip -r public/download/Chidori.zip chidori/ -x '*.git*' -x '*.env*' -x '*.DS_Store'",
    "git:update": "git fetch && git merge origin/main && git submodule update -i"
  },
  "devDependencies": {
    "@babel/core": "^7.13.1",
    "@babel/preset-env": "^7.13.5",
    "@babel/preset-react": "^7.12.13",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.1.0",
    "eslint": "^7.20.0",
    "eslint-loader": "^4.0.2",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^1.3.9",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "prettier": "^2.2.1",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "typescript": "^4.2.2",
    "url-loader": "^4.1.1",
    "webpack": "^5.24.2",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {
    "@popperjs/core": "^2.8.4",
    "bootstrap": "^5.0.0-beta1"
  }
}
