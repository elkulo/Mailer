{
  "name": "elkulo_mailer",
  "version": "1.0.0",
  "description": "Built locally with Webpack",
  "private": true,
  "scripts": {
    "start": "npm run develop & npm run serve",
    "develop": "webpack --mode development --watch",
    "format": "eslint --fix './public/webpack/src/**/*.+(js|jsx|json)'",
    "build": "webpack --mode production",
    "serve": "php -S localhost:8000 -t ./public",
    "composer:update": "cd public/mailer/app/ && composer update",
    "composer:lint": "cd public/mailer/app/ && composer phpcs",
    "composer:format": "cd public/mailer/app/ && composer phpcbf",
    "deploy": "zip -r dist/Chidori.zip public/ -x '*.git*' -x '*.env*' -x '*.DS_Store'"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.12",
    "babel-loader": "^8.2.2",
    "core-js": "^3.9.1",
    "css-loader": "^5.2.0",
    "css-minimizer-webpack-plugin": "^1.3.0",
    "eslint": "^7.22.0",
    "eslint-loader": "^4.0.2",
    "mini-css-extract-plugin": "^1.3.9",
    "prettier": "^2.2.1",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "typescript": "^4.2.3",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {
    "@popperjs/core": "^2.9.1",
    "bootstrap": "^5.0.0-beta3"
  }
}
