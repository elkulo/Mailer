{
  "name": "elkulo_mailer",
  "version": "3.0.0",
  "description": "Slim Framework 製 PHPメールフォーム CHiDORi の開発",
  "private": true,
  "scripts": {
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "start": "npm run develop & npm run serve",
    "develop": "webpack --mode development --watch",
    "format": "eslint --fix './public/webpack/src/**/*.js'",
    "build": "webpack --mode production",
    "serve": "php -S localhost:8000 -t ./public",
    "composer:install": "cd mailer/core/ && composer install",
    "composer:update": "cd mailer/core/ && composer update",
    "composer:phpcs": "cd mailer/core/ && composer phpcs",
    "composer:phpcbf": "cd mailer/core/ && composer phpcbf",
    "deploy": "sh deploy.sh"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "babel-loader": "^8.2.3",
    "core-js": "^3.18.3",
    "css-loader": "^6.4.0",
    "css-minimizer-webpack-plugin": "^3.1.1",
    "eslint": "^7.32.0",
    "eslint-webpack-plugin": "^3.0.1",
    "mini-css-extract-plugin": "^2.4.3",
    "prettier": "^2.4.1",
    "sass": "^1.43.3",
    "sass-loader": "^12.2.0",
    "typescript": "^4.4.4",
    "webpack": "^5.59.1",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "@popperjs/core": "^2.10.2",
    "axios": "^0.23.0",
    "bootstrap": "^5.1.3"
  }
}
