{
  "name": "elkulo_mailer",
  "version": "3.3.0",
  "description": "Slim Framework のモダンでシンプルなメールフォーム",
  "private": true,
  "scripts": {
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "start": "npm run develop & npm run serve",
    "develop": "webpack --mode development --watch",
    "format": "eslint --fix './public/webpack/src/**/*.js'",
    "build": "webpack --mode production",
    "serve": "php -S localhost:8000 -t ./public",
    "composer:install": "cd mailer/core/ && composer install",
    "composer:update": "cd mailer/core/ && composer update",
    "composer:phpcs": "cd mailer/core/ && composer phpcs",
    "composer:phpcbf": "cd mailer/core/ && composer phpcbf",
    "composer:phpstan": "cd mailer/core/ && composer phpstan",
    "deploy": "sh deploy.sh"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "babel-loader": "^8.2.3",
    "core-js": "^3.20.2",
    "css-loader": "^6.5.1",
    "css-minimizer-webpack-plugin": "^3.3.1",
    "eslint": "^8.6.0",
    "eslint-webpack-plugin": "^3.1.1",
    "mini-css-extract-plugin": "^2.4.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "sass": "^1.47.0",
    "sass-loader": "^12.4.0",
    "typescript": "^4.5.4",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.2",
    "axios": "^0.24.0",
    "bootstrap": "^5.1.3"
  }
}
