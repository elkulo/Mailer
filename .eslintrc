{
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "es2020": true,
    "node": true,
    "browser": true
  },
  "globals": {
    "DocumentTouch": true
  },
  "rules": {
    "no-console": "warn",
    "indent": [ "warn", "tab" ],
    "linebreak-style": [ "warn", "unix" ],
    "quotes": [ "warn", "single" ],
    "semi": [ "warn", "always" ],
    "arrow-spacing": [ "warn", { "before": true, "after": true } ],
    "no-confusing-arrow": [ "error", { "allowParens": true } ],
    "no-duplicate-imports": [ "error", { "includeExports": true } ],
    "no-underscore-dangle": "error",
    "no-var": "error",
    "new-cap": [ "error",  { "capIsNew": false } ],
    "template-tag-spacing": [ "warn", "always" ],
    "object-curly-spacing": [ "warn", "always"],
    "max-statements-per-line": [ "error", { "max": 1 } ],
    "block-spacing": "warn",
    "brace-style": "warn",
    "camelcase": "warn",
    "yoda": [ "warn", "never", { "onlyEquality": true } ],
    "eol-last": [ "warn", "always"],
    "space-in-parens": [ "warn", "always", { "exceptions": [ "{}", "[]" ] } ],
    "space-before-function-paren": [ "warn", "never" ],
    "space-before-blocks": "warn",
    "no-trailing-spaces": "warn",
    "keyword-spacing": [ "warn", { "before": true, "after": true }],
    "key-spacing": ["warn", { "beforeColon": false }],
    "comma-spacing": [ "warn", { "before": false, "after": true }],
    "lines-around-comment": [ "warn", { "beforeBlockComment": true, "beforeLineComment": true } ],
    "space-unary-ops": [ "warn", { "words": false, "nonwords": false, "overrides": { "!": true } } ],
    "array-bracket-spacing": [ "warn", "always", { "singleValue": false } ],
    "one-var-declaration-per-line": [ "warn", "initializations" ],
    "curly": "error",
    "eqeqeq": "error"
  }
}